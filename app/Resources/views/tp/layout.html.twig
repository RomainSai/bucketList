<!doctype html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <link rel="stylesheet" type="text/css" href="{{ asset('css/style.css') }}">
    <link rel="icon" href="{{ asset('images/favicon.png') }}" src=""/>
    <link href='http://fonts.googleapis.com/css?family=ZCOOL+QingKe+HuangYou' rel='stylesheet' type='text/css'>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <title>BUCKET-LIST{% block titre %}- ACCUEIL{%  endblock %}</title>
</head>
<body>
<!-- NAVBAR -->
    <header>
        <nav class="navbar navbar-expand-lg navbar-light   ">
            <a href="{{ path('layout') }}"><img src="{{ asset('images/logo.png') }}" alt="logo"></a>
            <a class="navbar-brand" href="{{ path('layout') }}">BUCKET LIST</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse " id="navbarNav">
                <ul class="nav navbar-nav ml-auto">
                    <li class="nav navbar-nav nav-item active ">
                        <a class="nav-link" href="{{ path('idee_idees') }}">Liste des Idées <span class="sr-only">(current)</span></a>
                        <a class="nav-link" href="{{ path('admin_category_categories') }}">Liste des catégories <span class="sr-only">(current)</span></a>
                        {% if is_granted("ROLE_USER") %}
                            <a class="nav-link" href="{{ path('user_logout') }}">Déconnexion <span class="sr-only">(current)</span></a>
                            <a class="nav-link" href="{{ path('idee_create') }}">Créer une idée <span class="sr-only">(current)</span></a>
                            {% else %}
                                <a class="nav-link" href="{{ path('user_login') }}">Se connecter <span class="sr-only">(current)</span></a>
                                <a class="nav-link" href="{{ path('user_register') }}">S'inscrire <span class="sr-only">(current)</span></a>
                        {% endif %}
                    </li>
                </ul>
            </div>
        </nav>
    </header>
<!-- FIN NAVBAR -->

<!-- MESSAGES FLASHS -->

{% for message in app.flashes('success') %}
    <div class="alert alert-success">
        {{ message }}
    </div>
{% endfor%}

<!-- FIN MESSAGES FLASHS -->

<!-- MAIN CONTENT -->
    <section class="content">
        {% block main %}
            <div class="main">
                <h2><em>Accueil</em></h2>
                {% if app.user %}
                    Buenos Dias <br> <h2>{{ app.user.pseudo }}</h2>
                    {% else %}
                    <h2>Bonjour</h2>
                {% endif %}

            </div>
        {% endblock %}
    </section>
<!-- FIN MAIN CONTENT -->

<!-- FOOTER -->
    <footer class="page-footer font-small blue" id="footer">
        <div class="footer footer-copyright text-center py-3">
            <p>© {{  "now"|date("Y") }} Copyright</p>
            <p>By Fabián Alexis <a href="https://github.com/fabianalexisinostroza/Antu">Github</a> (  <a href="https://creativecommons.org/licenses/by-sa/3.0" target="_blank">CC BY-SA 3.0</a>, <a href="https://commons.wikimedia.org/wiki/File%3AAntu_color-fill.svg" target="_blank">via Wikimedia Commons</a>)</p>
        </div>
    </footer>
<!-- FIN FOOTER -->

    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
    <script src="{{ asset('js/script.js') }}"></script>
</body>
</html>