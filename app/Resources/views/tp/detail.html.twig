{% extends 'tp/layout.html.twig' %}

{% block main %}
    {% for category, messages in app.flashes  %}
        {% for message in messages %}
            <div class="alert alert-{{ category }}">
                {{ message }}
            </div>
        {% endfor%}
    {% endfor%}


     <h2>Détail de l'idee : {{ idee.title }} </h2>
     <p>Description de l'article : {{ idee.getDescription() }}</p>
     <p>Auteur de l'article : {{ idee.getAuthor() }}</p>
     <p>Date de publication : {{ idee.getDateCreated()|date('d/m/Y') }}</p>
     <p>Date de publication : {{ idee.getDateCreated().format('d/M/Y à H:i:s') }}</p>
    {% if (idee.categories != null) %}
        <p>Catégorie : {{ idee.categories.name }}</p>
        {% else %}
            <p>Catégorie : aucune catégorie</p>
    {% endif %}
     <img src="{{ asset(idee.getPathImage()) }}" alt="">
     <a href="{{ path('idee_update', {'id':idee.id} ) }}">Modifier l'article</a>
     <a href="{{ path('idee_delete', {'idea':idee.id} ) }}">Supprimer l'article</a>



{% endblock %}

{% block titre %}
 - DETAIL IDEE
{% endblock %}

